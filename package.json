{
  "name": "darkskyapi-ts",
  "version": "0.0.0-development",
  "description": "A wrapper for DarkSky.net API written in Typescript",
  "keywords": [
    "darksky",
    "api",
    "typescript",
    "weather",
    "darksky.net",
    "forecast",
    "forecast.io"
  ],
  "main": "dist/darksky-api.cjs.js",
  "module": "dist/darksky-api.es5.js",
  "typings": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": "Jordon de Hoog <jordon.dehoog@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/worldturtlemedia/darksky-api"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.test.json -t codeFrame --fix",
    "lint:src": "npm run lint -- --project tsconfig.json 'src/**/*.ts'",
    "lint:test": "npm run lint -- --project tsconfig.test.json 'test/**/*.ts'",
    "lint:all": "npm run lint:src && npm run lint:test",
    "format": "prettier --write '{src,test}/**/*.{ts,json}' '*.md'",
    "predocs": "rimraf docs",
    "docs": "typedoc --out docs --excludeExternals --target es6 --includeDeclarations --excludePrivate --mode modules src",
    "docs:watch": "watch 'yarn docs' ./src",
    "tsc": "tsc --module commonjs",
    "rollup": "rollup -c rollup.config.ts",
    "prebuild": "rimraf dist",
    "build": "npm run tsc && npm run rollup",
    "postbuild": "npm run docs",
    "start": "concurrently 'npm run tsc -- --watch' 'npm run rollup -- --watch'",
    "test": "jest",
    "test:dev": "jest --watch",
    "test:prod": "npm run lint:all && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "date-fns": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.9",
    "colors": "1.4.0",
    "commitizen": "4.0.3",
    "concurrently": "4.1.2",
    "coveralls": "3.0.6",
    "cross-env": "6.0.2",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "jest-config": "24.9.0",
    "lint-staged": "9.4.1",
    "lodash.camelcase": "4.3.0",
    "prettier": "1.18.2",
    "prompt": "1.0.0",
    "replace-in-file": "4.1.3",
    "rimraf": "3.0.0",
    "rollup": "1.22.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-typescript2": "0.24.3",
    "rollup-plugin-uglify": "6.0.3",
    "semantic-release": "15.13.24",
    "shelljs": "0.8.3",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typedoc": "0.15.0",
    "typescript": "3.5.3",
    "watch": "1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,json,js,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "npm run lint -- --project tsconfig.json",
      "git add"
    ],
    "test/**/*.ts": [
      "npm run lint -- --project tsconfig.test.json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.test.json",
        "diagnostics": true
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage/",
    "coverageReporters": [
      "lcov",
      "html",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "preset": "ts-jest"
  }
}
